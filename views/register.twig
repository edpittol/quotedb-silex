{% extends "layout.twig" %}

{% block content %}
<h1>{{ "Sign Up"|trans }}</h1>
                
{{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.email) }}
    {{ form_row(form.plainPassword.first) }}
    {{ form_row(form.plainPassword.second) }}

    <button type="submit" class="btn btn-default">{{ "Sign Up"|trans }}</button>
{{ form_end(form) }}
{% endblock %}